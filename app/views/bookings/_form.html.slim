= simple_form_for(@booking) do |f|
  = f.error_notification

  .form-inputs
    = f.simple_fields_for :occupancy do |of|
      = of.input :begins_at
      = of.input :ends_at
    = f.association :home
    = f.input :state, collection: Booking.states.values
    = f.association :customer, required: false, input_html: { class: 'tags' }
    .hidden.invisible
      = f.simple_fields_for :customer, class: 'hidden' do |cf|
        = cf.input :first_name
        = cf.input :last_name
        = cf.input :street_address
        = cf.input :zipcode
        = cf.input :city

  .form-actions
    = f.button :submit
    = link_to t('back'), bookings_path, class: 'btn btn-default'
