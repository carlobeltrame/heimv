= simple_form_for(@booking) do |f|
  = f.error_notification

  .form-inputs
    = f.simple_fields_for :occupancy do |of|
      = of.input :begins_at, as: :datetime_picker
      = of.input :ends_at, as: :datetime_picker
    = f.association :home
    = f.input :state, collection: Booking.states.values
    = f.input :customer, as: :select, collection: people_for_select, include_blank: false, input_html: { data: { tags: true, new_tag_triggers: '.new_customer_fields'  } }
    .new_customer_fields.hidden
      = f.simple_fields_for :customer do |cf|
        = cf.input :first_name
        = cf.input :last_name
        = cf.input :street_address
        = cf.input :zipcode
        = cf.input :city

  .form-actions
    = f.button :submit
    = link_to t('back'), bookings_path, class: 'btn btn-default'
