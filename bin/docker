#!/bin/sh

TARGET_ENV=$1
shift

case "$TARGET_ENV" in
  -d | --dev | dev)
    DEFAULT="up"
    docker-compose -f docker-compose.yml -f docker-compose.development.yml "${@:-$DEFAULT}";;
  -p | --production | production )
    docker-compose -f docker-compose.yml -f docker-compose.production.yml $@;;
  -t | --test | test )
    DEFAULT="run --use-aliases app"
    docker-compose -f docker-compose.yml -f docker-compose.test.yml ${@:-$DEFAULT};;
  * ) break ;;
esac
